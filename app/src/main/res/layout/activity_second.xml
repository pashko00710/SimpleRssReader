<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"              android:orientation="vertical"              android:layout_width="match_parent"              android:layout_height="match_parent">    <ScrollView        android:layout_width="match_parent"        android:layout_height="match_parent">        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="match_parent">            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:id="@+id/second_textview_pubdate"                android:gravity="right"/>            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:id="@+id/second_textview_title"                android:textSize="16dp"                android:layout_below="@+id/second_textview_pubdate"/>            <ImageView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:minHeight="180dp"                android:id="@+id/second_imageview_title"                android:layout_marginTop="16dp"                android:scaleType="centerCrop"                android:layout_below="@+id/second_textview_title"/>                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:id="@+id/second_textview_articletext"                    android:layout_below="@id/second_imageview_title"                    android:layout_margin="16dp"/>            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:id="@+id/second_textview_guid"                android:layout_below="@+id/second_textview_articletext"                android:paddingBottom="32dp"                android:autoLink="web"                android:textSize="16sp"                />        </RelativeLayout>    </ScrollView></LinearLayout>